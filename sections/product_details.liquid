<section class="pd-section">
    {%  if section.settings.heading!=blank %}
        <h2 class="pd-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="pd-grid">
        {%  for block in section.blocks %}
            <div class="pd-tem" {{ block.shopify_attributes }}>
                {% if block.settings.icon!=blank %}
                    <div class="p-icon">
                        <img src="{{block.secttings.icon | image_url:width:40 }}" alt="Icon">
                    </div>
                {% endif %}

                {%  if block.settings.text!=blank %}
                    <p class="pd-text">{{block.settings.text }}</p>
                {% endif %}
            </div>
        {%  endfor %}
    </div>
</section>

<style>
    .pd-section {
    background: #fff;
    border-radius: 16px;
    padding: 40px 48px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    }

    .pd-heading {
    font-size: 26px;
    font-weight: 600;
    margin-bottom: 32px;
    }

    /* Grid layout */
    .pd-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px 48px;
    }

    /* Each item */
    .pd-item {
    display: flex;
    align-items: center;
    gap: 14px;
    }

    /* Icon */
    .pd-icon img {
    width: 28px;
    height: 28px;
    object-fit: contain;
    }

    /* Text */
    .pd-text {
    font-size: 18px;
    line-height: 1.4;
    margin: 0;
    }

    /* Mobile */
    @media (max-width: 768px) {
    .pd-section {
        padding: 24px;
    }

    .pd-heading {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .pd-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .pd-text {
        font-size: 15px;
    }
    }

</style>

{% schema %}
{
    "name": "Product Detail",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label":"Heading"
        }
    ],
    "blocks": [
        {
            "type": "detail",
            "name":"Product Detail",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label":"Icon",
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Detail text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Detail",
            "blocks": [
                {"type": "detail"},
                {"type": "detail"},
                {"type": "detail"},
                {"type": "detail"}
            ]
        }
    ]
}

{%  endschema %}