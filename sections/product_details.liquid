{% liquid
  # Get the product object
  if closest.product != blank
    assign current_product = closest.product
  else
    assign current_product = product
  endif
  
  # Fetch product details from metafields
  # Try list metafield first (for multiple details)
  assign product_details_list = current_product.metafields.custom.product_details.value
  
  # If list metafield exists, use it
  if product_details_list != blank and product_details_list.size > 0
    assign has_list_metafield = true
  else
    # Fallback: Try individual metafields with numbered pattern (product_detail_text_1, product_detail_icon_1, etc.)
    assign product_detail_text_1 = current_product.metafields.custom.product_detail_text_1
    assign product_detail_icon_1 = current_product.metafields.custom.product_detail_icon_1
    
    # If no numbered fields, try single fields (exact names from admin)
    if product_detail_text_1 == blank and product_detail_icon_1 == blank
      assign product_detail_text = current_product.metafields.custom.product_detail_text
      assign product_detail_icon = current_product.metafields.custom.product_detail_icon
    endif
  endif
%}

<section class="pd-section">
    {%  if section.settings.heading!=blank %}
        <h2 class="pd-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="pd-grid">
        {% if has_list_metafield %}
            {% for detail in product_details_list %}
                <div class="pd-item">
                    {% if detail.icon != blank %}
                        <div class="pd-icon">
                            <img src="{{ detail.icon | image_url: width: 40 }}" alt="Icon">
                        </div>
                    {% elsif detail.product_detail_icon != blank %}
                        <div class="pd-icon">
                            <img src="{{ detail.product_detail_icon | image_url: width: 40 }}" alt="Icon">
                        </div>
                    {% endif %}

                    {% if detail.text != blank %}
                        <p class="pd-text">{{ detail.text }}</p>
                    {% elsif detail.product_detail_text != blank %}
                        <p class="pd-text">{{ detail.product_detail_text }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        {% elsif product_detail_text_1 != blank or product_detail_icon_1 != blank %}
            {% comment %} Handle numbered metafields pattern {% endcomment %}
            {% for i in (1..10) %}
                {% assign text_key = 'product_detail_text_' | append: i %}
                {% assign icon_key = 'product_detail_icon_' | append: i %}
                {% assign detail_text = current_product.metafields.custom[text_key] %}
                {% assign detail_icon = current_product.metafields.custom[icon_key] %}
                
                {% if detail_text != blank or detail_icon != blank %}
                    <div class="pd-item">
                        {% if detail_icon != blank %}
                            <div class="pd-icon">
                                <img src="{{ detail_icon | image_url: width: 40 }}" alt="Icon">
                            </div>
                        {% endif %}

                        {% if detail_text != blank %}
                            <p class="pd-text">{{ detail_text }}</p>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        {% elsif product_detail_text != blank or product_detail_icon != blank %}
            {% comment %} Handle single metafields {% endcomment %}
            <div class="pd-item">
                {% if product_detail_icon != blank %}
                    <div class="pd-icon">
                        <img src="{{ product_detail_icon | image_url: width: 40 }}" alt="Icon">
                    </div>
                {% endif %}

                {% if product_detail_text != blank %}
                    <p class="pd-text">{{ product_detail_text }}</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>

<style>
    .pd-section {
    background: #ffffff;
    border-radius: 16px;
    padding: 40px 48px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    
    .pd-heading {
    font-size: 26px;
    font-weight: 600;
    margin: 0 0 32px 0;
    color: #222;
    }

  
    .pd-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    column-gap: 48px;
    row-gap: 24px;
    }

    .pd-item {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    }


    .pd-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    }

   
    .pd-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
    display: block;
    }

 
    .pd-text {
    font-size: 18px;
    line-height: 1.4;
    margin: 0;
    color: #222;
    word-break: break-word;
    overflow-wrap: anywhere;
    white-space: normal;
    }

/* Mobile Styles */

    @media (max-width: 768px) {
    .pd-section {
        padding: 24px;
    }

    .pd-heading {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .pd-grid {
        grid-template-columns: 1fr;
        row-gap: 16px;
    }

    .pd-item {
        gap: 10px;
    }

    .pd-icon {
        width: 24px;
        height: 24px;
    }

    .pd-icon img {
        width: 20px;
        height: 20px;
    }

    .pd-text {
        font-size: 15px;
    }
    }


</style>

