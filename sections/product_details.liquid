{% liquid
  if closest.product != blank
    assign current_product = closest.product
  else
    assign current_product = product
  endif

  assign product_details_list = current_product.metafields.custom.product_details.value
%}

{% if product_details_list != blank and product_details_list.size > 0 %}
<section class="pd-section" id="pd-section-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <button class="pd-header" type="button" aria-expanded="false">
      <h2 class="pd-heading">{{ section.settings.heading }}</h2>
      <svg class="pd-chevron" width="16" height="16" viewBox="0 0 16 16">
        <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  {% endif %}

  <div class="pd-content pd-content-hidden">
    <div class="pd-grid">
      {% for detail in product_details_list %}
        <div class="pd-item">
          {% if detail.icon != blank %}
            <div class="pd-icon">
              <img src="{{ detail.icon | image_url: width: 40 }}" alt="">
            </div>
          {% endif %}

          {% if detail.text != blank %}
            <p class="pd-text">{{ detail.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<style>
.pd-section {
  background: #fff;
  border-radius: 16px;
  padding: 40px 48px;
  box-shadow: 0 8px 20px rgba(0,0,0,.08);
}

.pd-header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  background: none;
  border: none;
  cursor: pointer;
}

.pd-heading {
  font-size: 26px;
  font-weight: 600;
  margin: 0;
}

.pd-chevron {
  transition: transform .3s ease;
}

.pd-header[aria-expanded="true"] .pd-chevron {
  transform: rotate(180deg);
}

.pd-content {
  margin-top: 32px;
}

.pd-content-hidden {
  display: none;
}

.pd-grid {
  display: grid;
  grid-template-columns: repeat(2,1fr);
  gap: 24px 48px;
}

.pd-item {
  display: flex;
  gap: 14px;
}

.pd-icon img {
  width: 24px;
  height: 24px;
}

.pd-text {
  font-size: 18px;
  margin: 0;
}

@media (max-width:768px) {
  .pd-section { padding: 24px; }
  .pd-heading { font-size: 20px; }
  .pd-grid { grid-template-columns: 1fr; }
  .pd-text { font-size: 15px; }
}
</style>

<script>
document.addEventListener("click", function(e) {
  const header = e.target.closest(".pd-header");
  if (!header) return;

  const content = header.nextElementSibling;
  const expanded = header.getAttribute("aria-expanded") === "true";

  header.setAttribute("aria-expanded", !expanded);
  content.classList.toggle("pd-content-hidden", expanded);
});
</script>

{% schema %}
{
  "name": "Product Detail",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Product Detail"
    }
  ]
}
{% endschema %}
