    "name": "Product Detail",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label":"Heading"
        }
    ],
    "blocks": [
        {
            "type": "detail",
            "name":"Product Detail",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label":"Icon",
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Detail text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Detail",
            "blocks": [
                {"type": "detail"},
                {"type": "detail"},
                {"type": "detail"},
                {"type": "detail"}
            ]
        }
    ]
}

{%  endschema %}