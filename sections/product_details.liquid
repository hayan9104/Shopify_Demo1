{% liquid
  # Get the product object
  if closest.product != blank
    assign current_product = closest.product
  else
    assign current_product = product
  endif
  
  # Try to fetch meta object list first (for list of meta objects)
  # Try different possible metafield keys
  assign product_details_list = current_product.metafields.custom.product_details.value
  if product_details_list == blank
    assign product_details_list = current_product.metafields.custom.product_detail.value
  endif
  
  # Check if it's a list of meta objects
  if product_details_list != blank and product_details_list.size > 0
    assign has_list_metafield = true
  else
    # Try single meta object reference
    assign product_detail_meta = current_product.metafields.custom.product_detail.value
    
    if product_detail_meta != blank
      assign has_single_meta_object = true
    endif
  endif
%}

<section class="pd-section">
    {%  if section.settings.heading!=blank %}
        <h2 class="pd-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="pd-grid">
        {% if has_list_metafield %}
            {% comment %} Handle list of meta objects {% endcomment %}
            {% for detail in product_details_list %}
                <div class="pd-item">
                    {% comment %} Access meta object fields - try all possible key variations {% endcomment %}
                    {% liquid
                        assign detail_icon = blank
                        assign detail_text = blank
                        
                        # Try different key formats for icon
                        if detail.product_detail_icon != blank
                            assign detail_icon = detail.product_detail_icon
                        elsif detail['product_detail_icon'] != blank
                            assign detail_icon = detail['product_detail_icon']
                        elsif detail.icon != blank
                            assign detail_icon = detail.icon
                        elsif detail.image != blank
                            assign detail_icon = detail.image
                        endif
                        
                        # Try different key formats for text
                        if detail.product_detail_text != blank
                            assign detail_text = detail.product_detail_text
                        elsif detail['product_detail_text'] != blank
                            assign detail_text = detail['product_detail_text']
                        elsif detail.text != blank
                            assign detail_text = detail.text
                        elsif detail.title != blank
                            assign detail_text = detail.title
                        endif
                    %}
                    
                    {% if detail_icon != blank %}
                        <div class="pd-icon">
                            <img src="{{ detail_icon | image_url: width: 40 }}" alt="Icon">
                        </div>
                    {% endif %}

                    {% if detail_text != blank %}
                        <p class="pd-text">{{ detail_text }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        {% elsif has_single_meta_object %}
            {% comment %} Handle single meta object {% endcomment %}
            <div class="pd-item">
                {% liquid
                    assign detail_icon = blank
                    assign detail_text = blank
                    
                    # Try different key formats for icon
                    if product_detail_meta.product_detail_icon != blank
                        assign detail_icon = product_detail_meta.product_detail_icon
                    elsif product_detail_meta['product_detail_icon'] != blank
                        assign detail_icon = product_detail_meta['product_detail_icon']
                    elsif product_detail_meta.icon != blank
                        assign detail_icon = product_detail_meta.icon
                    elsif product_detail_meta.image != blank
                        assign detail_icon = product_detail_meta.image
                    endif
                    
                    # Try different key formats for text
                    if product_detail_meta.product_detail_text != blank
                        assign detail_text = product_detail_meta.product_detail_text
                    elsif product_detail_meta['product_detail_text'] != blank
                        assign detail_text = product_detail_meta['product_detail_text']
                    elsif product_detail_meta.text != blank
                        assign detail_text = product_detail_meta.text
                    elsif product_detail_meta.title != blank
                        assign detail_text = product_detail_meta.title
                    endif
                %}
                
                {% if detail_icon != blank %}
                    <div class="pd-icon">
                        <img src="{{ detail_icon | image_url: width: 40 }}" alt="Icon">
                    </div>
                {% endif %}

                {% if detail_text != blank %}
                    <p class="pd-text">{{ detail_text }}</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>

<style>
    .pd-section {
    background: #ffffff;
    border-radius: 16px;
    padding: 40px 48px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    
    .pd-heading {
    font-size: 26px;
    font-weight: 600;
    margin: 0 0 32px 0;
    color: #222;
    }

  
    .pd-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    column-gap: 48px;
    row-gap: 24px;
    }

    .pd-item {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    }


    .pd-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    }

   
    .pd-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
    display: block;
    }

 
    .pd-text {
    font-size: 18px;
    line-height: 1.4;
    margin: 0;
    color: #222;
    word-break: break-word;
    overflow-wrap: anywhere;
    white-space: normal;
    }

/* Mobile Styles */

    @media (max-width: 768px) {
    .pd-section {
        padding: 24px;
    }

    .pd-heading {
        font-size: 20px;
        margin-bottom: 20px;
    }

    .pd-grid {
        grid-template-columns: 1fr;
        row-gap: 16px;
    }

    .pd-item {
        gap: 10px;
    }

    .pd-icon {
        width: 24px;
        height: 24px;
    }

    .pd-icon img {
        width: 20px;
        height: 20px;
    }

    .pd-text {
        font-size: 15px;
    }
    }


</style>

