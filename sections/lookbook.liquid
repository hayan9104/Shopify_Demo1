<section class="lbsection">
   {% if section.settings.heading!=blank %}
    <h2 class="lbheading">{{ section.settings.heading}}</h2>
   {% endif %}

   <div class="lbblocks">
    {% for block in section.blocks %}
        <div class="lbblock" {{ block.shopify_attributes }}>

            <div class="lbbanner">
                {% if block.settings.lbbanner!=blank %}
                    <img src="{{ block.settings.lbbanner | image_url }}" alt="LB Banner">
                    <div class="lbbanner-overlay">
                        {% if block.settings.lbbanner_heading!=blank %}
                            <h3>{{ block.settings.lbbanner_heading }}</h3>
                        {% endif %}
                        {% if block.settings.lbbutton!=blank %}
                            <a href="{{ block.settings.lbbuttonlink }}" class="lb-button">{{ block.settings.lbbutton }}</a>
                        {%  endif %}
                    </div>
                {% endif %}
            </div>

            <div class="lbproducts">
                {% if block.settings.lbproducts!=blank %}
                    <img src="{{ block.settings.lbproducts | image_url }}" alt="LB Products">
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</section>

<style>
   .lbsection {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 60px 0;
    min-height: 300px;
}

.lbheading {
    font-size: 30px;
    margin-bottom: 40px;
    padding: 0 20px;
}

.lbblocks {
    display: flex;
    flex-wrap: wrap; 
}

.lbblock {
    display: flex;
    flex: 1 1 100%;
    align-items: center;
}

.lbbanner {
    position: relative;
    width: 100%;
}

.lbbanner img {
    width: 100%;
    height: auto;
    display: block;
}

.lbbanner-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
    background: rgba(255, 255, 255, 0.9);
    padding: 16px 20px;
    border-radius: 8px;
    max-width: 80%;
}

.lbbanner-overlay h3 {
    margin: 0 0 10px 0;
    font-size: 20px;
    font-weight: 600;
    color: #000;
}

.lb-button {
    display: inline-block;
    padding: 10px 18px;
    background: #1f3d2b;
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    border-radius: 25px;
    transition: background 0.3s ease;
}

.lb-button:hover {
    background: #163021;
}
.lbproducts p {
    font-size: 16px;
    color: #555;
}

/* Mobile */
@media (max-width: 768px) {
    .lbsection {
        max-width: 100%;
        padding: 40px 0;
        min-height: auto;
    }

    .lbheading {
        font-size: 22px;
        margin-bottom: 20px;
        padding: 0 16px;
    }

    .lbblock {
        flex-direction: column; 
        gap: 0;
        margin-bottom: 0;
    }

    .lbbanner-overlay {
        bottom: 12px;
        left: 12px;
        padding: 12px 14px;
    }

    .lbbanner-overlay h3 {
        font-size: 16px;
    }

    .lb-button {
        padding: 8px 14px;
        font-size: 13px;
    }

    .lbproducts h3 {
        font-size: 18px;
    }

    .lbproducts p {
        font-size: 14px;
    }
}

</style>

{% schema %}
{
  "name": "Lookbook",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "section heading",
      "default": "Lookbook"
    }
  ],
  "blocks": [
    {
        "type": "item",
        "name":"lbitem",
        "settings": [
            {
                "type": "image_picker",
                "id":"lbbanner",
                "label":"lbbanner"
            },
            {
                "type":"text",
                "id":"lbbanner_heading",
                "label":"LB Banner Heading"
            },
            {
                "type":"url",
                "id":"lbbuttonlink",
                "label":"LB Button link"
            },
            {
                "type":"text",
                "id":"lbbutton",
                "label":"LB Button"
            },
            {
                "type": "product",
                "id":"lbproducts",
                "label":"lbProducts"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}