<section>
   {% if section.settings.heading!=blank %}
    <h2>{{ section.settings.heading}}</h2>
   {% endif %}
</section>

{% schema %}
{
  "name": "Lookbook",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Lookbook"
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}