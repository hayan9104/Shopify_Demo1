<section class="lbsection">
   {% if section.settings.heading!=blank %}
    <h2 class="lbheading">{{ section.settings.heading}}</h2>
   {% endif %}

   <div class="lbblocks">
    {% for block in section.blocks %}
        <div class="lbblock" {{ block.shopify_attributes }}>

            <div class="lbbanner">
                {% if block.settings.lbbanner!=blank %}
                    <img src="{{ block.settings.lbbanner | image_url }}" alt="LB Banner">
                {% endif %}
            </div>

            <div class="lbproducts">
                {% if block.settings.lbproducts!=blank %}
                    <img src="{{ block.settings.lbproducts | image_url }}" alt="LB Products">
                    <h3>{{ lbproducts.title }}</h3>
                    <p>{{ lbproducts.price | money }}</p>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</section>

<style>
   .lbsection {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    min-height: 300px;
    box-sizing: border-box;
}

.lbheading {
    font-size: 30px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 40px;
}

/* Container for blocks */
.lbblocks {
    display: flex;
    flex-wrap: wrap;
    gap: 20px; /* space between blocks */
    justify-content: center;
}

/* Each individual block */
.lbblock {
    flex: 1 1 280px; /* responsive width, min 280px */
    max-width: 350px;
    border: 1px solid #e0e0e0;
    padding: 15px;
    box-sizing: border-box;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.lbblock:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

/* Banner image styling */
.lbbanner img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
    margin-bottom: 15px;
}

/* Product image */
.lbproducts img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
    margin-bottom: 10px;
}

/* Product title & price */
.lbproducts h3 {
    font-size: 18px;
    font-weight: 500;
    margin: 5px 0;
}

.lbproducts p {
    font-size: 16px;
    font-weight: 400;
    color: #555;
}

/* Responsive design */
@media (max-width: 1024px) {
    .lbblock {
        flex: 1 1 45%;
    }
}

@media (max-width: 768px) {
    .lbsection {
        padding: 40px 16px;
    }

    .lbheading {
        font-size: 22px;
        margin-bottom: 30px;
    }

    .lbblock {
        flex: 1 1 100%;
        max-width: 100%;
    }
}

</style>

{% schema %}
{
  "name": "Lookbook",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "section heading",
      "default": "Lookbook"
    }
  ],
  "blocks": [
    {
        "type": "item",
        "name":"lbitem",
        "settings": [
            {
                "type": "image_picker",
                "id":"lbbanner",
                "label":"lbbanner"
            },
            {
                "type": "product",
                "id":"lbproducts",
                "label":"lbProducts"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}