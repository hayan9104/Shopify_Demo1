{% liquid
    assign current_product = closest.product | default: product
    assign ingredients = current_product.metafields.custom.hero_ingredients.value
  
    if ingredients != blank and ingredients.size > 0
      assign is_list = true
    else
      assign is_list = false
    endif
  %}
  
  <section class="hi-section" id="hi-section-{{ section.id }}">
    {% if section.settings.heading != blank %}
      <button class="hi-header" type="button" aria-expanded="false">
        <h2 class="hi-heading">{{ section.settings.heading }}</h2>
        <svg class="hi-chevron" width="16" height="16" viewBox="0 0 16 16">
          <path d="M4 6L8 10L12 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    {% endif %}
  
    <div class="hi-content hi-content-hidden">
      <div class="hi-grid">
  
        {% if is_list %}
          {% for ingredient in ingredients %}
            <div class="hi-item">
              {% if ingredient.image != blank %}
                <div class="hi-image">
                  <img src="{{ ingredient.image | image_url: width: 140 }}" alt="{{ ingredient.heading | default: 'Ingredient' }}" width="140" height="140">
                </div>
              {% endif %}
  
              {% if ingredient.heading != blank %}
                <h3 class="hi-item-heading">{{ ingredient.heading }}</h3>
              {% endif %}
  
              {% if ingredient.text != blank %}
                <p class="hi-item-text">{{ ingredient.text }}</p>
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
  
      </div>
    </div>
  </section>
  
  <style>
  .hi-section {
    background: #fff;
    border-radius: 16px;
    padding: 40px 48px;
    box-shadow: 0 8px 20px rgba(0,0,0,.08);
  }
  
  .hi-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background: none;
    border: 0;
    padding: 0;
    cursor: pointer;
  }
  
  .hi-heading {
    font-size: 26px;
    font-weight: 600;
    margin: 0;
  }
  
  .hi-chevron {
    transition: transform .3s ease;
  }
  
  .hi-header[aria-expanded="true"] .hi-chevron {
    transform: rotate(180deg);
  }
  
  .hi-content {
    margin-top: 32px;
  }
  
  .hi-content-hidden {
    display: none;
  }
  
  .hi-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px 32px;
  }
  
  .hi-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 10px;
  }
  
  .hi-image {
    max-width: 140px;
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hi-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 16px;
  }
  
  .hi-item-heading {
    font-size: 16px;
    font-weight: 600;
    color: #E91E63;
    margin: 0;
  }
  
  .hi-item-text {
    font-size: 14px;
    line-height: 1.5;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .hi-section {
      padding: 24px;
    }
  
    .hi-heading {
      font-size: 20px;
    }
  
    .hi-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px 16px;
    }
  
    .hi-image {
      max-width: 100px;
      height: 100px;
    }
  
    .hi-item-heading {
      font-size: 14px;
    }
  
    .hi-item-text {
      font-size: 13px;
    }
  }
  </style>
  
  <script>
  (() => {
    document.addEventListener('click', e => {
      const header = e.target.closest('.hi-header');
      if (!header) return;
  
      const section = header.closest('.hi-section');
      const content = section.querySelector('.hi-content');
  
      const open = header.getAttribute('aria-expanded') === 'true';
      header.setAttribute('aria-expanded', !open);
      content.classList.toggle('hi-content-hidden', open);
    });
  })();
  </script>
  
  {% schema %}
  {
    "name": "Hero Ingredient",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Hero Ingredients"
      }
    ],
    "presets": [
      {
        "name": "Hero Ingredient"
      }
    ]
  }
  {% endschema %}
  