{% liquid
  assign current_product = closest.product | default: product

  assign details = current_product.metafields.custom.hero_ingredient.value
  if details == blank
    assign details = current_product.metafields.custom.hero_ingredient.value
  endif

  assign is_list = details != blank and details.size > 0
%}

<section class="pd-section" id="pd-section-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <button class="pd-header" type="button" aria-expanded="false">
      <h2 class="pd-heading">{{ section.settings.heading }}</h2>
      <svg class="pd-chevron" width="16" height="16" viewBox="0 0 16 16">
        <path d="M4 6L8 10L12 6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  {% endif %}

  <div class="pd-content pd-content-hidden">
    <div class="pd-grid">

      {% if is_list %}
        {% for item in details %}
          {% render 'pd-item', item: item %}
        {% endfor %}
      {% elsif details != blank %}
        {% render 'pd-item', item: details %}
      {% endif %}

    </div>
  </div>
</section>

<style>
.pd-section {
  background: #fff;
  border-radius: 16px;
  padding: 40px 48px;
  box-shadow: 0 8px 20px rgba(0,0,0,.08);
}

.pd-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background: none;
  border: 0;
  padding: 0;
  cursor: pointer;
}

.pd-heading {
  font-size: 26px;
  font-weight: 600;
  margin: 0;
}

.pd-chevron {
  transition: transform .3s ease;
}

.pd-header[aria-expanded="true"] .pd-chevron {
  transform: rotate(180deg);
}

.pd-content {
  margin-top: 32px;
}

.pd-content-hidden {
  display: none;
}

.pd-grid {
  display: grid;
  grid-template-columns: repeat(2,1fr);
  gap: 24px 48px;
}

.pd-item {
  display: flex;
  align-items: flex-start;
  gap: 14px;
}

.pd-icon {
  width: 28px;
  height: 28px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pd-icon img {
  width: 24px;
  height: 24px;
  object-fit: contain;
}

.pd-text {
  font-size: 18px;
  line-height: 1.4;
  margin: 0;
}

@media (max-width: 768px) {
  .pd-section { padding: 24px }
  .pd-heading { font-size: 20px }
  .pd-grid { grid-template-columns: 1fr; gap: 16px }
  .pd-icon img { width: 20px; height: 20px }
  .pd-text { font-size: 15px }
}
</style>

<script>
(() => {
  document.addEventListener('click', e => {
    const header = e.target.closest('.pd-header');
    if (!header) return;

    const section = header.closest('.pd-section');
    const content = section.querySelector('.pd-content');

    const open = header.getAttribute('aria-expanded') === 'true';
    header.setAttribute('aria-expanded', !open);
    content.classList.toggle('pd-content-hidden', open);
  });
})();
</script>

{% schema %}
{
  "name": "Hero Ingredient",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Hero Ingredient"
    }
  ]
}
{% endschema %}
